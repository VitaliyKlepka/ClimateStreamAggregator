{
  "name": "climate-aggregator",
  "version": "1.0.0",
  "description": "Climate Event Stream Aggregation Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate": "typeorm-ts-node-commonjs migration:run -d ./src/infrastructure/db/database.ts",
